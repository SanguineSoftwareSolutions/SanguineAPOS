<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:id="@+id/llBillPayModeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/txtBillPayMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="payModeName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/txt2"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/llItemModifierDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llBillPayModeLayout"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:id="@+id/linearBillAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/textViewBillAmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="BillAmt:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"/>

            <TextView
                android:id="@+id/txtBillAmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:background="@drawable/bg_edittext"
                android:gravity="right"
                android:padding="10dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPaidAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/textViewPaidAmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="left"
                android:text="Paid Amt"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"/>

            <EditText
                android:id="@+id/edtPaidAmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:background="@drawable/bg_edittext"
                android:gravity="right"
                android:padding="10dp"
                android:text=""
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:selectAllOnFocus="true"
                android:cursorVisible="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/textBalanceRemark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="left"
                android:text="Remark"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"/>

            <EditText
                android:id="@+id/edtBalRemark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:background="@drawable/bg_edittext"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="5"
                android:padding="10dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSlip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/textSlipNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="left"
                android:text="Slip No"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"/>

            <EditText
                android:id="@+id/edtSlipNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:inputType="text"
                android:maxLines="5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearSlipExpiryDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/textSlipExpiryDt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.68"
                android:ellipsize="end"
                android:gravity="left"
                android:text="Expiry Date"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"/>

            <EditText
                android:id="@+id/edtSlipExpiryDt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:inputType="text"
                android:maxLines="5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="@dimen/txt3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"/>

            <ImageView
                android:id="@+id/imgViewCaledar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:contentDescription="@null"
                android:src="@mipmap/imgreservation_calendar" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            >


            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Ok"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt3" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>



            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Close"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt3" />
        </LinearLayout>




    </LinearLayout>


</RelativeLayout>
