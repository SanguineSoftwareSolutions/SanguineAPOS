<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.2"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:padding="0.5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:text="From Date:"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/imgViewFromDate"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/imgreservation_calendar" />

                <TextView
                    android:id="@+id/edtFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt3"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:text="From Time:"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgViewFromTime"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/imgreser_time" />

                <TextView
                    android:id="@+id/edtFromTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt3"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="To Date:"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgViewToDate"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:paddingTop="1dp"
                    android:src="@mipmap/imgreservation_calendar" />

                <TextView
                    android:id="@+id/edtToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt3"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0.5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvToTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="To Time:"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/imgViewToTime"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/imgreser_time" />

                <TextView
                    android:id="@+id/edtToTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt3"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grid_line" />



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1.3"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:id="@+id/txt_Mobile_No"
                style="@style/list_title_textview"
                android:text="Mob No"
                android:textSize="@dimen/txt3"/>


            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/txt_Cust_Name"
                style="@style/list_title_textview"
                android:text="Customer "
                android:textSize="@dimen/txt3"/>


            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:id="@+id/txt_table"
                style="@style/list_title_textview"
                android:text="Table"
                android:textSize="@dimen/txt3"/>

            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:id="@+id/txt_Pax"
                style="@style/list_title_textview"
                android:text="Pax"
                android:textSize="@dimen/txt3"/>


            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txt_Date"
                style="@style/list_title_textview"
                android:text="Date"
                android:textSize="@dimen/txt3"/>


            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:id="@+id/txt_Time"
                style="@style/list_title_textview"
                android:text="Time"
                android:textSize="@dimen/txt3"/>


            <TextView
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/txt_Comments"
                style="@style/list_title_textview"
                android:text="Comments"
                android:textSize="@dimen/txt3"/>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/grid_line" />

        <GridView
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:textSize="@dimen/txt1"
            android:id="@+id/gvReservationList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </GridView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="3.4"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:textSize="@dimen/txt3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Execute"
            android:background="@drawable/bg_button"
            android:textColor="@android:color/white"
            android:id="@+id/btnExecute" />

        <Space

            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:text=""
            />


        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:background="@drawable/bg_button"
            android:textColor="@android:color/white"
            android:id="@+id/btnReset" />



        <Space
            android:textSize="@dimen/txt3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/bg_button"
            android:textColor="@android:color/white"
            android:id="@+id/btnCancel" />

    </LinearLayout>


</LinearLayout>