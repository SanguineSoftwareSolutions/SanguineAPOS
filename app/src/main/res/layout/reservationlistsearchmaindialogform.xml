        <com.example.apos.views.CustomSearchView
            android:id="@+id/edtSearchReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">



        <TextView
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:id="@+id/strReservationNo"
            style="@style/list_title_textview"
            android:text="Reservation No"
            android:textSize="@dimen/txt3"/>


        <TextView
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:id="@+id/strCustomerName"
            style="@style/list_title_textview"
            android:text="Customer Name"
            android:textSize="@dimen/txt3"/>


        <TextView
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/strTableName"
            style="@style/list_title_textview"
            android:text="Table Name"
            android:textSize="@dimen/txt3"/>

        <TextView
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/strReservationDate"
            style="@style/list_title_textview"
            android:text="Date"
            android:textSize="@dimen/txt3"/>



    </LinearLayout>


    <View
        android:layout_marginTop="5dp"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grid_line" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="vertical">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="1"
            android:layout_margin="3dp"
            android:id="@+id/gvreservationsearchdialoglistview"
            android:textSize="@dimen/txt1"
            />



    </LinearLayout>

</LinearLayout>

