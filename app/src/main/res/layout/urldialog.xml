<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_list_row_void_kot"
    android:background="@color/gray"

    android:gravity="center"
    android:padding="3dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/textView"
                style="@style/list_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:text="Server Name"
                android:textSize="@dimen/txt3" />

            <EditText
                style="@style/list_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:background="@drawable/oval_edittext"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:text=""
                android:textSize="@dimen/txt3" />

            <EditText
                android:id="@+id/edtuRL"
                style="@style/list_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="5"
                android:background="@drawable/oval_edittext"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:text=""
                android:textSize="@dimen/txt3" />



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Printer Type:"
                android:textSize="@dimen/txt3"
                android:textStyle="bold" />


            <Spinner
                android:textSize="@dimen/txt3"
                android:textColor="#ffffff"
                android:background="@color/gray"
                android:textStyle="normal"
                android:layout_weight="1"
                android:id="@+id/spinnerPrinter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/servellistLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Serevr List:"
                android:textSize="@dimen/txt3"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/serverList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt3"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:padding="1dp">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/imgcmnbtn1"
            android:text="SUBMIT"
            android:textSize="@dimen/txt3"
            />


    </LinearLayout>

</LinearLayout>
