<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout

        android:gravity="center"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:stretchColumns="*">


                <TableRow
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/txtItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text=""
                        />

                    <View
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:id="@+id/txtQty"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text=""
                        />

                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/button_blue"
                        android:textColor="@color/white"
                        android:id="@+id/removeqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="-"
                        />

                    <View
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"/>

                    <Button
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/button_blue"
                        android:textColor="@color/white"
                        android:id="@+id/addqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="+"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_weight="1"
                        android:background="@drawable/button_blue"
                        android:textColor="@color/white"
                        android:id="@+id/deleteitem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="DELETE"
                        />

                    <View
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"/>
                    />

                    <Button
                        android:layout_weight="1"
                        android:background="@drawable/button_blue"
                        android:textColor="@color/white"
                        android:id="@+id/kotok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="OK"/>
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:background="@drawable/button_blue"
                        android:textColor="@color/white"
                        android:id="@+id/btnKotModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="Modifier"
                        />



                </TableRow>





                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >




                    <TextView

                        android:gravity="left"
                        android:textColor="@color/black"
                        android:id="@+id/txtffItemRate"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="Name:"
                        />


                    <EditText
                        android:inputType="text"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:id="@+id/edtKotFFItemName"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text=""
                        />




                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >




                    <TextView

                        android:gravity="left"
                        android:textColor="@color/black"
                        android:id="@+id/txtffItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="Rate:"
                        />


                    <EditText
                        android:ems="10"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:id="@+id/edtKotFFItemRate"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text=""
                        />




                </TableRow>


                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/button_blue"
                        android:id="@+id/btnKotFFOk"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="FreeFlowOK"/>

                    <View
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"/>


                    <Button
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/button_blue"
                        android:id="@+id/btnKotFFReset"
                        android:textColor="@color/white"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textSize="@dimen/txt3"
                        style="@style/list_title_textview"
                        android:text="RESET"
                        />

                </TableRow>






            </TableLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>

