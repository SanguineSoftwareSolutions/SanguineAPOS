<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    >


    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_margin="2dp"
            android:padding="1dp"
            android:orientation="vertical"

            >

            <LinearLayout
                android:id="@+id/linearMobilePanel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="9"
                    android:gravity="left"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/txtMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Mob"
                        android:textSize="@dimen/txt3"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:padding="1dp">

                    <EditText
                        android:id="@+id/edtMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edit_text"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textSize="@dimen/txt3" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:padding="1dp">

                    <Button
                        android:id="@+id/btnOk"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:gravity="center"
                        android:text="OK"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt4"
                        android:textStyle="bold"></Button>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNewCustomer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:orientation="vertical"
                >



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:padding="1dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:padding="1dp">

                        <TextView
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt3"
                            android:layout_weight="1"
                            android:text="Customer Name"
                            android:id="@+id/txtCustomerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_margin="2dp"
                        android:padding="1dp">

                        <EditText
                            android:background="@drawable/bg_edit_text"
                            android:textSize="@dimen/txt3"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="#000000"
                            android:id="@+id/edtCustomerName" />

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:padding="1dp">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:padding="1dp">

                        <TextView
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt3"
                            android:layout_weight="1"
                            android:text="Customer Type"
                            android:id="@+id/txtCustomerType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_margin="2dp"
                        android:padding="1dp">

                        <Spinner
                            android:textSize="6sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textColor="#000000"
                            android:background="@color/white"
                            android:id="@+id/spinnerOfCustType" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:padding="1dp">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="left"
                        android:layout_margin="2dp"
                        android:padding="1dp">

                        <TextView
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt3"
                            android:layout_weight="1"
                            android:text="Address"
                            android:id="@+id/txtCustomerAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_margin="2dp"
                        android:padding="1dp">

                        <EditText
                            android:background="@drawable/bg_edit_text"
                            android:textSize="@dimen/txt3"
                            android:layout_weight="1"
                            android:inputType="textMultiLine"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:textColor="#000000"
                            android:id="@+id/edtCustomerAddress" />

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/linearButtonPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="1dp">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="SAVE"
                    android:textSize="@dimen/txt3"
                    android:textStyle="bold"
                    android:textColor="@color/white"></Button>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp">

                <Button
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt3"
                    android:layout_weight="1"
                    android:text="RESET"
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white">
                </Button>

            </LinearLayout>



        </LinearLayout>




    </LinearLayout>


</LinearLayout>