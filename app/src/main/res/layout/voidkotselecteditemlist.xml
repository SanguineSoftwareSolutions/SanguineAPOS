<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_row_void_kot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_row_selector"
    android:padding="2dp"
    android:layout_margin="2dp"
    android:gravity="center">



    <TextView
        android:gravity="left"
        android:id="@+id/tv_list_row_void_kot_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        style="@style/list_title_textview"
        android:text="@string/desc"
        android:textSize="@dimen/txt3"
        />

    <TextView
        android:gravity="right"
        android:id="@+id/txt_list_row_void_kot_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        style="@style/list_title_textview"
        android:text="1"
        android:textSize="@dimen/txt3"/>

    <TextView
        android:gravity="right"
        android:id="@+id/tv_list_row_void_kot_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/list_title_textview"
        android:text="@string/amt"
        android:textSize="@dimen/txt3"/>




    <Button
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_list_row_void_kot_delete"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight=".5"
        style="@style/list_title_textview"
        android:text="Del"
        android:textSize="@dimen/txt3"/>

    <Button
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btnReduceQty"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight=".5"
        style="@style/list_title_textview"
        android:text="-"
        android:textSize="@dimen/txt3"/>



</LinearLayout>
