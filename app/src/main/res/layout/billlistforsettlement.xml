<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/vgTableHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtExternalCode"
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_gravity="left"
            style="@style/list_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="BillNo"
            android:textSize="12dp" />

        <TextView
            android:layout_gravity="left"
            style="@style/list_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="BillDate"
            android:textSize="12dp" />

        <TextView
            android:layout_gravity="left"
            style="@style/list_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="TableName"
            android:textSize="12dp" />

        <TextView
            android:layout_gravity="right"
            style="@style/list_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="Amount"
            android:textSize="12dp" />
    </LinearLayout>


    <View

        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grid_line" />




    <LinearLayout
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/gvBillList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="1dp"
            android:layout_weight="2"
            android:numColumns="1"
            android:verticalSpacing="5dp"

            />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/grid_line" />
    </LinearLayout>





</LinearLayout>

