<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <TableLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:stretchColumns="*">

                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/txt3"
                        android:id="@+id/txtSettelPosName"
                        android:gravity="left"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="POSName"
                        />

                    <TextView

                        android:layout_width="100dp"
                        android:textSize="@dimen/txt3"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/txtSettelMode"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SettelmentMode"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:textSize="@dimen/txt3"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/txtSaleAmt"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sales Amount"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:textSize="@dimen/txt3"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/txtSalePer"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sales(%)"/>
                </TableRow>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/grid_line" />

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>
